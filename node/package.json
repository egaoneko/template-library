{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/@my-app/app",
      "**/@my-app/app/**"
    ]
  },
  "scripts": {
    "start:client": "lerna run start --stream --scope @my-app/client",
    "start:server:start": "lerna run start --stream --scope @my-app/server",
    "start:server:dev": "lerna run start:dev --stream --scope @my-app/server",
    "start:ios": "lerna run ios --stream --scope @my-app/app",
    "start:android": "lerna run android --stream --scope @my-app/app",
    "test": "lerna run test --stream",
    "test:e2e": "lerna run test:e2e --stream",
    "test:core": "lerna run test --stream --scope @my-app/core",
    "test:client": "lerna run test --stream --scope @my-app/client",
    "test:server": "lerna run test --stream --scope @my-app/server",
    "test:app": "lerna run test --stream --scope @my-app/app",
    "schema": "lerna run schema --scope @my-app/core",
    "build": "lerna run build",
    "build:core": "lerna run build --scope @my-app/core",
    "build:lib": "lerna run build --ignore @my-app/client @my-app/server",
    "build:client": "lerna run build --scope @my-app/client",
    "build:server": "lerna run build --scope @my-app/server",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "publish": "lerna publish --yes",
    "publish:canary": "lerna publish --canary --yes"
  },
  "dependencies": {
    "axios": "0.21.1",
    "lodash": "4.17.21",
    "rxjs": "7.2.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.1",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "jest-config": "27.0.6",
    "lerna": "~4.0.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "resolutions": {
    "@types/react": "^17",
    "@jest/create-cache-key-function": "^27.0.1"
  }
}
