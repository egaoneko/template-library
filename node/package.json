{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "start:client": "lerna run start --stream --scope @my-app/client",
    "start:server:start": "lerna run start --stream --scope @my-app/server",
    "start:server:dev": "lerna run start:dev --stream --scope @my-app/server",
    "test": "lerna run test --stream",
    "test:e2e": "lerna run test:e2e --stream",
    "test:core": "lerna run test --stream --scope @my-app/core",
    "test:client": "lerna run test --stream --scope @my-app/client",
    "test:server": "lerna run test --stream --scope @my-app/server",
    "schema": "lerna run schema --scope @my-app/core",
    "build": "lerna run build",
    "build:core": "lerna run build --scope @my-app/core",
    "build:lib": "lerna run build --ignore @my-app/client @my-app/server",
    "build:client": "lerna run build --scope @my-app/client",
    "build:server": "lerna run build --scope @my-app/server",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "publish": "lerna publish --yes",
    "publish:canary": "lerna publish --canary --yes"
  },
  "dependencies": {
    "axios": "0.21.1",
    "lodash": "4.17.21",
    "rxjs": "7.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/jest": "26.0.23",
    "@types/node": "15.12.2",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.4",
    "jest-config": "27.0.4",
    "lerna": "~4.0.0",
    "prettier": "2.3.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.2"
  }
}
